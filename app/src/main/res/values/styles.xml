<resources>
    <!-- Text -->
    <style name="Text">
        <item name="android:fontFamily">@font/garbata_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Toolbar" parent="Text">
        <item name="android:textSize">@dimen/text_toolbar</item>
    </style>

    <style name="Text.Head" parent="Text">
        <item name="android:textSize">@dimen/text_head</item>
    </style>

    <style name="Text.Subhead" parent="Text">
        <item name="android:textSize">@dimen/text_subhead</item>
    </style>

    <style name="Text.Regular" parent="Text">
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <style name="Text.Body" parent="Text">
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/background_toolbar</item>
        <item name="titleTextAppearance">@style/Text.Toolbar</item>
    </style>

    <!-- View -->
    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_0.5</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
    </style>

    <!-- Divider -->
    <style name="Divider">
        <!--  you can give your color here. that will change all divider color in your app.  -->
        <item name="android:background">@color/gray_b</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Divider.Light">
        <item name="android:background">@color/gray_e5</item>
    </style>

    <style name="Divider.Horizontal.Light" parent="Divider.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- Dialog -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="FullscreenDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

</resources>