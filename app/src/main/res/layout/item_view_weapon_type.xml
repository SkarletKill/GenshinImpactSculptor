<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_margin">

    <ImageView
        android:id="@+id/weaponImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:alpha="0.9"
        android:contentDescription="Weapon Image"
        android:src="@drawable/ic_prototype_sword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/weaponName"
        style="@style/Text.Subhead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_0.5"
        android:layout_marginEnd="@dimen/margin_0.5"
        app:layout_constraintBottom_toBottomOf="@+id/weaponImage"
        app:layout_constraintEnd_toStartOf="@+id/characterGuideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/weaponImage"
        app:layout_constraintTop_toTopOf="@id/weaponImage"
        tools:text="Камнерез" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/characterGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <TextView
        android:id="@+id/weaponLvl"
        style="@style/Text.Subhead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_0.5"
        app:layout_constraintBottom_toBottomOf="@+id/weaponImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/characterGuideline"
        app:layout_constraintTop_toTopOf="@id/weaponImage"
        tools:text="Lv. 90" />

</androidx.constraintlayout.widget.ConstraintLayout>