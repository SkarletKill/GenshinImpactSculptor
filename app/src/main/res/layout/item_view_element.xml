<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_0.5"
        android:layout_marginBottom="@dimen/margin_0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/elementImage"
            android:layout_width="@dimen/elementImageSize"
            android:layout_height="@dimen/elementImageSize"
            android:layout_alignParentStart="true"
            android:contentDescription="element icon"
            tools:ignore="HardcodedText"
            tools:src="@drawable/ic_element_pyro" />

        <TextView
            android:id="@+id/elementText"
            style="@style/Text.Head"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/elementImage"
            android:layout_alignBottom="@+id/elementImage"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_1.0"
            android:layout_toEndOf="@+id/elementImage"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:textColor="@color/text_color_spinner_item"
            tools:text="Pyro" />

    </RelativeLayout>

    <View style="@style/Divider.Horizontal.Light" />
</LinearLayout>