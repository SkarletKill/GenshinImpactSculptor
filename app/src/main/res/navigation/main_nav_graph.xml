<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="ua.skarlet.gis.ui.welcome.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">

        <action
            android:id="@+id/onPrimaryContentClick"
            app:destination="@id/dashboardFragment" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="ua.skarlet.gis.ui.dashboard.DashboardFragment"
        android:label="DashboardFragment">

        <action
            android:id="@+id/onNewCharacterClick"
            app:destination="@id/newCharacterFragment" />

        <action
            android:id="@+id/onNewWeaponClick"
            app:destination="@id/newWeaponFragment" />

        <action
            android:id="@+id/onNewArtifactClick"
            app:destination="@id/newArtifactFragment" />

        <action
            android:id="@+id/onNewBuildClick"
            app:destination="@id/newBuildFragment" />
    </fragment>

    <fragment
        android:id="@+id/newCharacterFragment"
        android:name="ua.skarlet.gis.ui.dashboard.character.one.NewCharacterFragment"
        android:label="NewCharacterFragment">
    </fragment>

    <fragment
        android:id="@+id/newWeaponFragment"
        android:name="ua.skarlet.gis.ui.dashboard.weapon.one.NewWeaponFragment"
        android:label="NewWeaponFragment">
    </fragment>

    <fragment
        android:id="@+id/newArtifactFragment"
        android:name="ua.skarlet.gis.ui.dashboard.weapon.one.NewWeaponFragment"
        android:label="NewArtifactFragment">
    </fragment>

    <fragment
        android:id="@+id/newBuildFragment"
        android:name="ua.skarlet.gis.ui.dashboard.weapon.one.NewWeaponFragment"
        android:label="NewBuildFragment">
    </fragment>

</navigation>